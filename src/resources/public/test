<head>
    <h1> WebSocket Test Page </h1>
    <script>
        const textAnswer = document.querySelector("#webanswer");
        ws = new WebSocket("ws://" + location.hostname + ":" + location.port + "/websockets");
        ws.onmessage = messageEvent => {
            textAnswer.value = messageEvent.data;
        }

    </script>
</head>
